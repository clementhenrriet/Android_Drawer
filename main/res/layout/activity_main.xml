<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dl.drawer.MainActivity"
    android:id="@+id/drawer_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView"
            android:text="MAIN LAYOUT"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/app_icon_size" />

        <Button
            android:text="ESSAI BOUTON"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/app_icon_size" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start">

        <!-- layout_gravity="start" place le drawer à l'extérieur de l'écran
        app:menu="@menu/navigation_menu" insère le menu-->

        <Button
            android:text="GYOUGEUZPGUEPZI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
